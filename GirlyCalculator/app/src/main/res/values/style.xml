<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for Number Buttons -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/light_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <!-- Style for Operation Buttons -->
    <style name="OperationButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/hot_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <!-- Style for Equals Button -->
    <style name="EqualsButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/hot_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">cursive</item>
    </style>
</resources>